<% if errors.any? %>
  <div class="notification is-warning content" id="error_explanation">
    <h2 class="subtitle"><%= pluralize(errors.count, "error") %> prohibited this <%= name %> from being saved:</h2>

    <div class="content">
      <ul>
      <% errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>

